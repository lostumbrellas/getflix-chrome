{
    "manifest_version": 2,

    "name": "Getflix Region Switcher",
    "short_name": "Getflix",
    "description": "Check and change your Getflix region quickly and easily.",
    "version": "1.0.1",

    "permissions": [
        "https://*.getflix.com.au/",
        "http://*.netflix.com/",
        "tabs"
    ],

    "browser_action": {
        "default_icon": "/img/browser_icon.png",
        "default_popup": "popup.html"
    },

    "icons": {
        "128": "/img/icon128.png"
    }
}